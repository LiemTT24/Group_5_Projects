@model Group5_API_Project.DTO.OrderDTO

@{
    ViewData["Title"] = "Shipper Update";
}

<h1>Update Delivery Processing</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShipperUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" readonly/>
                <span asp-validation-for="OrderID" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                <input asp-for="Products.ProductName" class="form-control" readonly/>
                <span asp-validation-for="Products.ProductName" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" readonly/>
                <span asp-validation-for="CustomerName" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipperName" class="control-label"></label>
                <input asp-for="ShipperName" class="form-control" readonly/>
                <span asp-validation-for="ShipperName" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly/>
                <span asp-validation-for="PhoneNumber" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" readonly/>
                <span asp-validation-for="Address" class="text-danger" readonly></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus.OrderCheckingID"   class="control-label"></label>
                <select asp-for="OrderStatus.OrderCheckingID" name="CategoryID" class="form-control" asp-items="ViewBag.OrderChecking"></select>
                <span asp-validation-for="OrderStatus.OrderCheckingID" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px;">
                <input type="submit" value="Save" class="btn btn-primary" /> | 
                <a asp-action="Dashboard"><div class="btn btn-danger">Back to Shipper Dashboard</div></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
