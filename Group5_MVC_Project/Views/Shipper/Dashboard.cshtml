@model IEnumerable<Group5_API_Project.DTO.OrderDTO>

@{
    ViewData["Title"] = "Shipper Dashboard Page";
}

<div>
    <h1 
        style="text-align: center; color: #808080; font-size: 52px; margin-top: 0; margin-bottom: 10px; padding: 20px; font-style: italic">
        Shipper Dashboard Page
    </h1>
    <hr />
    <table class="table table-bordered"  style="margin-top: 5px;">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Customer Name</th>
            <th>Shipper Name</th>
            <th>Customer Contact</th>
            <th>Order Date</th>
            <th>Delivery Date</th>
            <th>Address</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipperName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDeliveryDate) - @Html.DisplayFor(modelItem => item.EndDeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus.OrderCheckingName)
                </td>
                <td>
                    <a asp-action="ShipperUpdate" asp-route-id="@item.OrderID"><div class="btn btn-warning">Edit</div></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>